{{#if formShowing}}

<h1>Ask a new question</h1>
<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="question">Question</label>
    {{input value=question id="question" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="notes">Additional Notes</label>
    {{textarea value=notes id="notes" rows="5" class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>

{{else}}
  <button class="btn btn-primary"{{action 'formShow'}}> Add a Question</button>
{{/if}}  

