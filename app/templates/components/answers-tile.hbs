<li>{{answer.author}}: {{answer.body}}</li>
{{format-date answer.date_added}}
<br>
<button class="btn btn-danger btn-sm"{{action 'deleteAnswer' answer}}> Delete Answer</button>

{{#if updateAnswerShowing}}
<form>
<div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" class="form-control" placeholder=answer.author}}
  </div>
  <div class="form-group">
    <label for="body">Answer</label>
    {{textarea value=body id="body" rows="5" class="form-control" placeholder=answer.body}}
  </div>

  <button class="btn btn-primary"{{action 'updateAnswer' answer}}>Update Answer</button>
</form>

{{else}}

<button class="btn btn-success btn-sm"{{action 'updateAnswerShow'}}>Update Answer</button>
{{/if}}
