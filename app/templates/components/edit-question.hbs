<br>
<center>
<button class="btn btn-danger" {{action 'deleteQuestion' model}}>Delete Question</button>
</center>

{{#if updateShowing}}

<h1>Update your question</h1>
<form>
  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" class="form-control" placeholder=model.author}}
  </div>

  <div class="form-group">
    <label for="question">Question</label>
    {{input value=question id="question" class="form-control" placeholder=model.question}}
  </div>

  <div class="form-group">
    <label for="notes">Additional Notes</label>
    {{textarea value=notes id="notes" rows="5" class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action 'update' model}}>Save</button>

</form>

{{else}}
<br>
<center>
<button class="btn btn-warning"{{action 'updateShow'}}>Update Question </button>
</center>
{{/if}}
